# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Resend (for email notifications)
RESEND_API_KEY=your_resend_api_key
RESEND_WEBHOOK_SECRET=your_resend_webhook_signing_secret

# Email unsubscribe token signing
UNSUBSCRIBE_SECRET=your_random_secret_for_signing_unsubscribe_tokens

# Supabase Service Role (for webhook handler and admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (optional - for custom analytics endpoint)
# NEXT_PUBLIC_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com/api/events

# Google Maps (for location autocomplete and map view in activities)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Places API (server-side, for place details and photos)
GOOGLE_PLACES_API_KEY=your_google_places_server_api_key

# Google OAuth (for Google Calendar integration)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Token encryption key for OAuth tokens at rest (generate with: openssl rand -hex 32)
# Optional: if not set, tokens are stored in plaintext (legacy behavior)
TOKEN_ENCRYPTION_KEY=your_random_hex_key_here

# V0 (Vercel AI - geração de componentes frontend)
# Obtenha em: https://v0.app/chat/settings/keys | Requer plano Premium ou Team
# V0_API_KEY=your_v0_api_key_here

# Monitoring & Debugging
# Set to 'true' to enable verbose logging in development
# DEBUG=false
